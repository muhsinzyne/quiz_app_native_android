<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"

>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/new_background">

        <ImageView
            android:id="@+id/imgBookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_bookmark" />
        <ImageView
            android:id="@+id/imgPrivacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_privacy" />

        <RelativeLayout
            android:id="@+id/mainlogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/mid_screen">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/logo" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/mid_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottom"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/instruction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/new_btn_bg"
                android:text="@string/instruction"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/new_btn_bg"
                android:text="@string/start"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/white" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="3dp">


            <LinearLayout
                android:id="@+id/button_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"

                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layoutDirection="ltr">

                <RelativeLayout
                    android:id="@+id/leaderbord1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_dp"
                    android:background="@drawable/leaderboard_bg">

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"

                        android:src="@drawable/rank" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/achivments1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_dp"

                    android:background="@drawable/achievement_bg">

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/achive" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/setting1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_dp"
                    android:background="@drawable/setting_bg">

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                 android:layout_centerVertical="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/setting"
                      />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/sign_in_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/logout_bg">

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/singout"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/sign_out_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/logout_bg"
                    android:visibility="gone">

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/singout" />
                </RelativeLayout>
            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>